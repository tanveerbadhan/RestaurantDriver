<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="stylesheet" href="/styles/common.css" />
        <link rel="stylesheet" href="/styles/home.css" />
        <title>Document</title>
    </head>
    <body>
        <h1 class="title">Driver Delivery Portal</h1>
        <div class="formWpr">
            <section class="login">
                <form method="POST" action="/login">
                    <h3>Login In</h3>
                    <div class="inputWpr">
                        <input
                            type="email"
                            class="email"
                            placeholder="Enter Your Email"
                            required
                        />
                        <% if(usernameError) { %>
                        <p class="error">Username does not exist</p>
                        <% } %>
                    </div>
                    <div class="inputWpr">
                        <input
                            type="password"
                            class="password"
                            placeholder="Enter Your password"
                            required
                        />
                        <% if(passwordError) { %>
                        <p class="error">Enter Correct Password</p>
                        <% } %>
                    </div>
                    <button class="button">Log In</button>
                </form>
            </section>
            <section class="signUp">
                <form method="POST" action="/signup">
                    <h3>Create Your Account</h3>
                    <input
                        type="email"
                        class="email"
                        placeholder="Enter Your Email"
                        required
                    />
                    <input
                        type="password"
                        class="password"
                        placeholder="Enter Your password"
                        required
                    />
                    <input
                        type="password"
                        class="password"
                        placeholder="Confirm Your password"
                        required
                    />
                    <button class="button">Sign Up</button>
                </form>
            </section>
        </div>
    </body>
</html>
